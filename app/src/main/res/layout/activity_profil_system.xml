<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity" android:padding="24dp" android:background="#FFCCFFFF" android:gravity="center" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginBottom="24dp" android:textSize="19sp" android:textColor="@color/design_default_color_primary_dark" android:text="Operating System" android:id="@+id/txJudul"/>

    <ImageView android:layout_height="200dp" android:layout_width="wrap_content" android:layout_marginBottom="16dp" android:id="@+id/gambarSystem" android:scaleType="fitCenter" android:src="@drawable/windows"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="17sp" android:textColor="@color/design_default_color_primary_dark" android:text="Jenis System" android:id="@+id/txJenis"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Latest version" android:id="@+id/txversion" android:textStyle="italic" android:textColor="@color/black"/>

    <TextView android:gravity="center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Deskripsi System" android:id="@+id/txDeskripsi" android:layout_marginTop="8dp" android:textColor="@color/black"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Logo" android:id="@+id/txLogo" android:textStyle="italic" android:textColor="@color/black"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Developer" android:id="@+id/txDeveloper" android:textStyle="italic" android:textColor="@color/black"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Website" android:id="@+id/txWebsite" android:textStyle="italic" android:textColor="@color/black"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Source_Model" android:id="@+id/txModel" android:textStyle="italic" android:textColor="@color/black"/>


    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="24dp">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="first" android:id="@+id/btnPertama" android:layout_margin="4dp" style="@style/Widget.AppCompat.Button.Small"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Prev" android:id="@+id/btnSebelumnya" android:layout_margin="4dp" style="@style/Widget.AppCompat.Button.Small"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="next" android:id="@+id/btnBerikutnya" android:layout_margin="4dp" style="@style/Widget.AppCompat.Button.Small"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Last" android:id="@+id/btnTerakhir" android:layout_margin="4dp" style="@style/Widget.AppCompat.Button.Small"/>

</LinearLayout>

</LinearLayout>